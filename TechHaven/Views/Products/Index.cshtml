@model IReadOnlyList<ProductListDto>
@{
    ViewData["Title"] = "Products";
    Func<decimal, decimal> toEuro = (priceInLv) => priceInLv / 1.95m;
}

<section class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Products</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary">
            No products found.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="card product-card h-100">
                        <img src="@p.ImageUrl" class="card-img-top" />

                        <div class="card-body d-flex flex-column">
                            <small class="text-muted text-uppercase">@p.Category</small>

                            <h5 class="card-title mt-2">
                                @p.Name
                            </h5>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="price">
                                    @toEuro(p.Price).ToString("0.00") &euro; / @p.Price.ToString("0.00") лв.
                                </span>

                                <a asp-action="Details"
                                   asp-route-id="@p.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    View
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    }
</section>

