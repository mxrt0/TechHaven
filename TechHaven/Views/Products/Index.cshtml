@model ProductsIndexViewModel
@{
    ViewData["Title"] = "Products";
}

@section Back {
    <button class="back-btn" onclick="history.back()">
        ← Back
    </button>
}

<section class="container my-5">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <h1 class="fw-bold text-center">Products</h1>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-secondary">
            No products found.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model.Products)
            {
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="card product-card h-100">
                        <img src="@p.ImageUrl" class="card-img-top" />

                        <div class="card-body d-flex flex-column">
                            <small class="text-muted text-uppercase">@p.Category</small>

                            <h5 class="card-title mt-2">
                                @p.Name
                            </h5>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="price">
                                    @Helper.ToEuro(p.Price).ToString("0.00") &euro; / @p.Price.ToString("C")
                                </span>

                                <a asp-action="Details"
                                   asp-route-id="@p.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    View
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    }
</section>

