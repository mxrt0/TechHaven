@model ProductsIndexViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="public-wrapper">
    <div class="container pt-4">

        <div class="d-flex align-items-center mb-4 gap-3">
            <button class="neon-btn btn-dim btn-sm" onclick="history.back()">
                <i class="bi bi-arrow-left"></i> BACK
            </button>
            <div class="flex-grow-1">
                <h2 class="category-display-name mb-0 text-center">Products</h2>
            </div>
        </div>

            <form method="get" class="mb-4">
                @if (Model.IsCategoryLocked)
                {
                    <input type="hidden" name="lockCategory" value="true" />
                }
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="stat-label">Search</label>
                        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="neon-input" placeholder="Search for products..." />
                    </div>

                    <div class="col-md-3">
                        <label class="stat-label">Category</label>
                        <select name="categoryId" class="neon-select">
                            @if (Model.IsCategoryLocked)
                            {
                                <option value="@Model.CategoryId" selected>@Model.Categories.First(c => c.Id == Model.CategoryId).Name</option>
                            }
                            else
                            {
                                <option value="">All</option>
                                @foreach (var c in Model.Categories)
                                {
                                    <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">@c.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="stat-label">Price Min (&euro;)</label>
                        <input type="number" name="minPrice" value="@Model.MinPrice" class="neon-input" />
                    </div>

                    <div class="col-md-2">
                        <label class="stat-label">Price Max (&euro;)</label>
                        <input type="number" name="maxPrice" value="@Model.MaxPrice" class="neon-input" />
                    </div>

                    <div class="col-md-2 d-flex gap-2">
                        <button type="submit" class="neon-btn">GO</button>
                        <a asp-action="Index" asp-route-categoryId="@(Model.IsCategoryLocked? Model.CategoryId: "")"
                           asp-route-lockCategory="@Model.IsCategoryLocked"
                           class="neon-btn btn-dim px-3 text-decoration-none ">
                            Reset
                        </a>
                    </div>
                </div>
            </form>

        @if (!Model.Products.Any())
        {
            <div class="empty-state">
                <p>// No products found matching your search parameters.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var p in Model.Products)
                {
                    <div class="col-12 col-sm-6 col-lg-3">
                        <a asp-action="Details" asp-route-id="@p.Id" class="spec-card">
                            <div class="spec-img-wrap">
                                <img src="@p.ImageUrl" alt="@p.Name" />
                            </div>

                            <div class="spec-details">
                                <h3 class="product-item-name">@p.Name</h3>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <div class="item-price">@p.Price.ToString("0.00") €</div>
                                    <div class="action-indicator">
                                        <span class="line"></span>
                                        <span class="txt">VIEW</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-5 pb-5">
                <ul class="pagination neon-pagination justify-content-center">
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)"
                           asp-route-searchTerm="@Model.SearchTerm" asp-route-categoryId="@Model.CategoryId">PREV</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Page == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i"
                               asp-route-searchTerm="@Model.SearchTerm" asp-route-categoryId="@Model.CategoryId">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)"
                           asp-route-searchTerm="@Model.SearchTerm" asp-route-categoryId="@Model.CategoryId">NEXT</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>