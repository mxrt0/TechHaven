@model WishlistIndexViewModel
@{
    ViewData["Title"] = "My Wishlist";
    var products = Model.Wishlist;
}
@section Styles {
    <link rel="stylesheet" href="~/css/toast.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" asp-append-version="true" />
}

<div class="container py-4 wishlist-page">

    <div class="d-flex align-items-center mb-4">
        <button class="neon-btn btn-dim btn-sm me-4 mb-2" onclick="history.back()">
            <i class="bi bi-arrow-left"></i> BACK
        </button>
        <div class="flex-grow-1">
            <h2 class="wishlist-title text-center">My Wishlist</h2>
        </div>       
    </div>

    <div class="wishlist-empty text-center p-5" style="@(products.Any() ? "display: none;" : "display: block;")">
            <i class="bi bi-heart-break neon-icon"></i>
            <p class="mt-3 font-monospace">YOUR WISHLIST IS CURRENTLY EMPTY</p>
            <a asp-controller="Products" asp-action="Index" class="neon-btn btn-sm">
                Browse products
            </a>
    </div>
        <div class="row g-4">
            @foreach (var item in products)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="wishlist-card" id="@($"wc{item.Id}")">
                        <img src="@item.ImageUrl" alt="@item.Name" />

                        <div class="wishlist-card-body">
                            <div>
                                <div class="header-row">
                                    <h5>@item.Name</h5>
                                </div>
                                <div class="price">
                                    @item.Price.ToString("0.00") &euro;
                                </div>
                                <span class="stock-info @(item.InStock ? "in-stock" : "out-of-stock")">
                                    @(item.InStock ? "IN STOCK" : "OUT OF STOCK")
                                </span>
                            </div>

                            <div class="wishlist-actions mt-3">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"
                                   class="neon-btn">
                                    View
                                </a>
                                <button class="wishlist-btn btn btn-outline-danger ms-2" data-product-id="@item.Id">
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>
@section Scripts {
    <script src="~/js/toast.js"></script>
    <script src="~/js/wishlist.js"></script>
}