@model OrderIndexViewModel

@{
    ViewData["Title"] = "My Orders";
}
@section Styles {
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
}
@section Back {
    <button class="neon-btn btn-dim btn-sm me-4 mb-2" onclick="history.back()">
        <i class="bi bi-arrow-left"></i> BACK
    </button>
}
<div id="temp-message" data-temp-Msg="@TempData["SuccessMessage"]" data-type="order"></div>
@if (TempData["ErrorMessage"] is not null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container my-5 orders-page">
    <h2 class="mb-5 neon-title text-center">🧾 MY ORDERS</h2>

    @if (!Model.Orders.Any())
    {
        <div class="empty-orders text-center">
            <p>You haven’t placed any orders yet.</p>
            <a asp-controller="Products"
               asp-action="Index"
               class="btn btn-outline-info mt-2 btn-lg">
                Browse products
            </a>
        </div>
    }
    else
    {
        <div class="orders-list">
            @foreach (var order in Model.Orders)
            {
                <div class="order-card">
                  <div class="order-header">
                        <div>
                            <h5 class="order-number text-uppercase">
                                Order #@order.OrderNumber
                            </h5>
                            <div class="order-date font-monospace">
                                @order.OrderDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
                            </div>
                            <div class="mt-2">
                                <span class="badge
                                    @(order.Status == OrderStatus.Pending ? "bg-warning" :
                                                order.Status == OrderStatus.Shipped ? "bg-success" :
                                                "bg-danger")">
                                    ● @order.Status
                                </span>
                            </div>
                        </div>

                    <div class="order-header-actions">
                        <div class="order-total">
                            @order.OrderTotal.ToString("0.00") &euro;
                        </div>

                        <div class="order-actions">
                            @if (order.Status == OrderStatus.Pending || order.Status == OrderStatus.Shipped)
                            {
                            
                                    <a asp-action="Details"
                                        asp-route-id="@order.OrderId"
                                        class="neon-btn btn-sm">
                                        View
                                    </a>
                            }
                            @if (order.Status == OrderStatus.Pending)
                            {
                                    <button type="button"
                                            class="btn btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#cancelModal"
                                            data-order-id="@order.OrderId">
                                        Cancel
                                    </button>                        
                            } 
                        </div>
                    </div>
                  </div>
                    <div class="order-items">
                        @foreach (var item in order.OrderItems)
                        {
                            <div class="order-item">
                                <img src="@item.ImageUrl"
                                     alt="@item.ProductName"
                                     class="order-item-image" />

                                <div class="order-item-info">
                                    <div class="order-item-name">
                                        @item.ProductName
                                    </div>

                                    <div class="order-item-meta">
                                        @item.Quantity ×
                                        @item.UnitPrice.ToString("0.00") &euro;
                                    </div>
                                </div>

                                <div class="order-item-total">
                                    @item.TotalPrice.ToString("0.00") &euro;
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
<partial name="_CancelOrderPartial" />
@section Scripts {
    <script src="~/js/toast.js"></script>
    <script src="~/js/readTempMsg.js"></script>
    <script src="~/js/orders.js"></script>
}
