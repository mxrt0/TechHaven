@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="auth-buttons">
@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="get">
        <button id="logout" type="submit" class="auth-btn auth-btn.logout">Log Out</button>
    </form> 
}
else
{
    <a class="auth-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="auth-btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
}
</div>
