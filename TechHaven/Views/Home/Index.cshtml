@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="public-wrapper">
    <div class="hero-section">
        <div class="container text-center">
            <h1 class="glitch-title">Build Your <span class="neon-glow">Dream PC</span></h1>
            <p class="hero-tagline">// High-Performance Components. Zero Compromise.</p>
        </div>
    </div>

    <div class="container">
        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <a asp-controller="Products"
                       asp-action="Index"
                       asp-route-categoryId="@category.Id"
                       asp-route-lockCategory="true"
                       class="spec-card">

                        <div class="spec-img-wrap">
                            <img src="@category.ImageUrl" alt="@category.Name" />
                        </div>

                        <div class="spec-details">   
                            <h3 class="category-display-name">@category.Name</h3>
                            <div class="action-indicator">
                                <span class="line"></span>
                                <span class="txt">BROWSE</span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>