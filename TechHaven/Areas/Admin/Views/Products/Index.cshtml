@model ProductsIndexViewModel
@{
    ViewData["Title"] = "Products";
}

@section Styles {
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
}

<div id="temp-message" data-temp-Msg="@TempData["SuccessMessage"]"></div>

@if (TempData["Admin_ErrorMessage"] is not null)
{
    <div class="alert badge-cancelled text-center mb-4" style="background: rgba(255, 77, 77, 0.1);">
        @TempData["Admin_ErrorMessage"]
    </div>
}

<div class="dashboard-container">
    <header class="mb-4">
        <h2 class="neon-title">Products</h2>
        <div class="neon-line"></div>
    </header>

    <div class="neon-btn mb-4">
        <a asp-action="Create" >+ Add New Product</a>
    </div>

    <div class="data-panel mb-4">
        <form method="get" asp-action="Index">
            <div class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                    <label class="stat-label">Search</label>
                    <input type="text"
                           name="SearchTerm"
                           value="@Model.SearchTerm"
                           class="neon-input"
                           placeholder="Search by product name..." />
                </div>

                <div class="col-12 col-md-2">
                    <label class="stat-label">Category</label>
                    <select name="CategoryId" class="neon-select">
                        <option value="">All</option>
                        @foreach (var c in Model.Categories)
                        {
                            <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">@c.Name</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-2">
                    <label class="stat-label">Stock</label>
                    <select name="Stock" class="neon-select">
                        @foreach (var stock in Enum.GetValues<StockFilter>())
                        {
                            <option value="@stock" selected="@(Model.Stock == stock)">@stock</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-2">
                    <label class="stat-label">Sort</label>
                    <select name="SortBy" class="neon-select">
                        @foreach (var sort in Enum.GetValues<ProductSort>())
                        {
                            <option value="@sort" selected="@(Model.SortBy == sort)">@sort</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3 d-flex gap-2">
                    <button type="submit" class="neon-btn w-70">Search</button>
                    <div class="neon-btn btn-dim text-center">
                        <a asp-action="Index" class="w-100">Reset</a>
                    </div>                   
                </div>
            </div>
        </form>
    </div>

    <div class="data-panel">
        <div class="table-container">
            @if (!Model.Products.Any())
            {
                <div class="alert alert-secondary bg-transparent border-secondary text-dim text-center">
                    No products found.
                </div>
            }
            else
            {
                <table class="neon-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td data-label="Name" class="fw-bold text-white">@product.Name</td>
                                <td data-label="Price" class="text-accent">@product.Price.ToString("0.00") €</td>
                                <td data-label="Stock">@product.StockQuantity</td>
                                <td data-label="Category" class="text-dim">@product.CategoryName</td>
                                <td data-label="Status">
                                    @if (product.IsActive)
                                    {
                                        <span class="neon-badge badge-shipped">Active</span>
                                    }
                                    else
                                    {
                                        <span class="neon-badge btn-dim" style="border: 1px solid var(--text-dim);">Inactive</span>
                                    }
                                </td>
                                <td data-label="Actions" class="text-end">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <div class="neon-btn">
                                            <a asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                                        </div>                                        
                                        <form asp-action="ToggleActive" asp-route-id="@product.Id" method="post" class="d-inline">
                                            <button type="submit" class="neon-btn @(product.IsActive ? "btn-red" : "btn-green")">
                                                @(product.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination neon-pagination justify-content-center">
                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-stock="@Model.Stock">
                        Previous
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.Page == i ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-stock="@Model.Stock">
                            @i
                        </a>
                    </li>
                }
                <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-stock="@Model.Stock">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/readTempMsg.js"></script>
}