<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <nav class="col-md-2 col-lg-2 d-md-block bg-dark admin-sidebar collapse show" id="sidebarMenu">
                <div class="sidebar-header text-center mb-4">
                    <h4>TechHaven Admin</h4>
                    <hr class="border-light" />
                </div>
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")"
                               asp-area="Admin" asp-controller="Home" asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewData["ActivePage"] as string == "Products" ? "active" : "")"
                               asp-area="Admin" asp-controller="Products" asp-action="Index">
                                Products
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewData["ActivePage"] as string == "Orders" ? "active" : "")"
                               asp-area="Admin" asp-controller="Orders" asp-action="Index">
                                Orders
                            </a>
                        </li>
                    </ul>
                    <div class="mt-4 px-2">
                        <a class="btn btn-success btn-sm w-100 mb-2" asp-area="Admin" asp-controller="Products" asp-action="Create">
                            + Add Product
                        </a>
                        <a class="btn btn-info btn-sm w-100 mb-2" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                            View Orders
                        </a>
                    </div>
                    <div class="mt-4">
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-outline-light btn-sm w-100">Logout</button>
                        </form>
                    </div>
                </div>
            </nav>

            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="toast-container position-fixed bottom-0 end-0 p-3">
                    <div id="wishlistToast"
                         class="toast align-items-center text-bg-dark border-0"
                         role="alert">
                        <div class="d-flex flex-column text-center">
                            <div class="toast-body" id="wishlistToastBody"></div>
                            <div class="progress-bar neon-timer"></div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
