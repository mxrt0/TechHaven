<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TechHaven</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/TechHaven.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="icon" href="~/images/icons/admin.png" type="image/png" />
    @RenderSection("Styles", required: false)
</head>
<body class="admin-body">
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-md-block admin-sidebar collapse show" id="sidebarMenu">
                <div class="d-flex flex-column h-100">

                    <div class="sidebar-header text-center py-4">
                        <h2 class="neon-text-blue mb-0">Tech<span class="text-white">Haven</span></h2>
                        <span class="admin-badge">Admin</span>
                        <div class="sidebar-divider-glow"></div>
                    </div>

                    <div class="px-3">
                        <h6 class="sidebar-section-title">Navigation</h6>
                        <ul class="nav flex-column mb-4">
                            <li class="nav-item">
                                <a class="nav-link admin-nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")"
                                   asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-grid-1x2-fill me-2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link admin-nav-link @(ViewData["ActivePage"]?.ToString() == "Products" ? "active" : "")"
                                   asp-area="Admin" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-cpu-fill me-2"></i> Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link admin-nav-link @(ViewData["ActivePage"]?.ToString() == "Orders" ? "active" : "")"
                                   asp-area="Admin" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-receipt me-2"></i> Orders
                                </a>
                            </li>
                        </ul>

                        <h6 class="sidebar-section-title">Inventory</h6>
                        <div class="mb-4">
                            <a class="neon-btn btn-sm w-100 mb-3 d-flex align-items-center justify-content-center"
                               style="text-decoration:none; gap: 8px;"
                               asp-area="Admin" asp-controller="Products" asp-action="Create">
                                <i class="bi bi-plus-circle-fill"></i>+ CREATE PRODUCT
                            </a>
                        </div>                   
                    </div>

                    <div class="mt-auto p-3 border-top border-secondary bg-dark-soft">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="logout-link w-100 text-start">
                                <i class="bi bi-power me-2"></i> LOG OUT
                            </button>
                        </form>
                    </div>

                </div>
            </nav>

            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4 py-4 main-content">
                <div class="toast-container position-fixed bottom-0 end-0 p-3">
                    <div id="wishlistToast"
                         class="toast align-items-center text-bg-dark border-0"
                         role="alert">
                        <div class="d-flex flex-column text-center">
                            <div class="toast-body" id="wishlistToastBody"></div>
                            <div class="progress-bar neon-timer"></div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
