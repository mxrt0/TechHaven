@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
    Layout = User.IsInRole("Admin") ? "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}
<div class="auth-page">
    <div class="auth-card">
        <h2>Log Out</h2>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p class="auth-text">
                You’re currently signed in.
                Click below to sign out of your account.
            </p>

            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                  method="post">
                <button type="submit" class="logout-confirm">
                    Confirm
                </button>
            </form>
        }
        else
        {
            <p class="auth-text success">
                You have successfully logged out.
            </p>

            <a asp-controller="Home" asp-action="Index" class="auth-back">
                Return to Home
            </a>
        }
    </div>
</div>
